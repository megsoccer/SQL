/* Create table about the people and what they do here */
CREATE table famous_people (
id INTEGER PRIMARY KEY AUTOINCREMENT,
    fullname TEXT,
    age INTEGER);

INSERT INTO famous_people (fullname, age) VALUES ("Rihanna", "36");
INSERT INTO famous_people (fullname, age) VALUES ("Beyonce", "42");
INSERT INTO famous_people (fullname, age) VALUES ("Nina Dobrev", "35");
INSERT INTO famous_people (fullname, age) VALUES ("Margot Robbie", "33");

CREATE table careers (
id INTEGER PRIMARY KEY AUTOINCREMENT,
    person_id INTEGER,
    name TEXT);

INSERT INTO careers (person_id, name) VALUES (1, "singer");
INSERT INTO careers (person_id, name) VALUES (1, "actress");
INSERT INTO careers (person_id, name) VALUES (2, "singer");
INSERT INTO careers (person_id, name) VALUES (2, "actress");
INSERT INTO careers (person_id, name) VALUES (3, "actress");
INSERT INTO careers (person_id, name) VALUES (4, "actress");

CREATE table country_origin (
id INTEGER PRIMARY KEY AUTOINCREMENT,
    person_id INTEGER,
    country_name TEXT);
    
INSERT INTO country_origin (person_id, country_name) VALUES (1, "Barbados");
INSERT INTO country_origin (person_id, country_name) VALUES (2, "USA");
INSERT INTO country_origin (person_id, country_name) VALUES (3, "Bulgaria");
INSERT INTO country_origin (person_id, country_name) VALUES (4, "Australia");

/*what famous people are both singers and actresses*/

SELECT famous_people.fullname, careers.name
FROM famous_people
JOIN careers
ON famous_people.id=careers.person_id;

/*what famous people were born in USA*/

SELECT famous_people.fullname, country_origin.country_name
FROM famous_people
JOIN country_origin
ON famous_people.id=country_origin.person_id
WHERE country_name = "USA";

/*sort rows by age most to least, include their name, age, and career*/

SELECT famous_people.fullname, famous_people.age, careers.name
FROM famous_people
LEFT OUTER JOIN careers
ON famous_people.id=careers.person_id
GROUP BY famous_people.fullname
ORDER BY age desc;
